{
  "name": "udisc-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.11.0",
  "description": "Monorepo for the UDisc utilities packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "publish": "turbo run publish",
    "workspace:build": "cd $INIT_CWD && dev lib",
    "workspace:format": "cd $INIT_CWD && dev format",
    "workspace:lint": "cd $INIT_CWD && dev lint",
    "workspace:typecheck": "cd $INIT_CWD && tsc --noEmit",
    "workspace:test": "cd $INIT_CWD && dev test",
    "publish-packages": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@imccausl/dev": "^2.3.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.46.4",
    "@yarnpkg/sdks": "^3.2.3",
    "eslint": "^9.39.1",
    "jsdom": "^27.2.0",
    "msw": "^2.12.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.2.4",
    "typescript": "^5.9.3"
  }
}
