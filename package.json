{
  "name": "udisc-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.11.0",
  "description": "Monorepo for the UDisc utilities packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "publish": "turbo run publish",
    "workspace:build": "cd $INIT_CWD && dev lib",
    "workspace:format": "cd $INIT_CWD && dev format",
    "workspace:lint": "cd $INIT_CWD && dev lint",
    "workspace:typecheck": "cd $INIT_CWD && tsc --noEmit",
    "workspace:test": "cd $INIT_CWD && dev test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@imccausl/dev": "^2.3.0",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-vitest": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/browser-playwright": "4.0.9",
    "@vitest/coverage-v8": "4.0.9",
    "@yarnpkg/sdks": "^3.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.0.8",
    "jsdom": "^27.2.0",
    "msw": "^2.12.2",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.0.8",
    "tsx": "^4.20.6",
    "turbo": "^2.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "4.0.9"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "@types/react-dom": ">=18"
  }
}
